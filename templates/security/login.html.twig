{% extends 'base.html.twig' %}

{% block title %}Quoi de 9 ?{% endblock %}

{% block body %}
        <div class="container">
            
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

                <h1 id="ce">Connexion</h1><br/>
                <a href="{{path('home2')}}" class="btn btn-warning">Retour</a><br/><br/>

                <form action="{{ path('app_login') }}" method="post">
                    

                    <div class="form-group">
                        <label > Email</label>
                        <input type="email"  name="_username" id="inputEmail" class="form-control" placeholder=" Saisissez votre adresse email ..." required autofocus>
                    </div><br/>

                    <div class="form-group">
                        <label >Mot de passe</label>
                        <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Saisissez votre mot de passe ..." required>
                    </div><br/>

                    <div class="form-group">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                    </div>
                                    <!-- redirection vers nouvelle page d'accueil-->
                        <input type="hidden" name="_target_path" value="{{ path('home1') }}"> 
                        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. #}
                        {# See https://symfony.com/doc/current/security/remember_me.html  #}

                        <div class="checkbox mb-3">
                            <label><input type="checkbox" name="_remember_me"> Se souvenir de moi</label>
                        </div><br/><br/>
                
                    <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
                </form>
        </div>
{% endblock %}
