                    {% else %}

                    
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('home1')}}" style="font-size:25px"><strong>Accueil</strong></a>
                    </li>
                    

                    <li class="nav-item ">
                        <a class="nav-link" href="{{path('pjim2')}}" style="font-size:25px"><strong>Article</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('pjim2_create')}}" style="font-size:25px"><strong>Créer un article</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('security_logout')}}" style="font-size:25px"><strong>Déconnexion</strong></a>

                    </li>

                    {% endif %}
                    
                </ul>
                
            </div>
        </nav> 

            {% block body %}{% endblock %}
        
